<% content_for :javascript do %>  
<script type="text/javascript" charset="utf-8">
    $(document).ready(function() {
      var editor = WysiHat.Editor.attach($('#paquete_descripcion_corta'));
      editor_toolbar(editor);
      var editor2 = WysiHat.Editor.attach($('#paquete_itinerario_corto'));
      editor_toolbar(editor2);
      var editor3 = WysiHat.Editor.attach($('#paquete_itinerario_largo'));
      editor_toolbar(editor3);
    });
    
    function editor_toolbar(tool_editor) {
      toolbar = new WysiHat.Toolbar(tool_editor);
      toolbar.initialize(tool_editor);
      toolbar.addButton({ name: 'bold', label: "Negrita" });      
      toolbar.addButton({ name: 'underline', label: "Subrayado" });      
      toolbar.addButton({ name: 'em', label: "It√°licas"});      
    }
</script>
<% end %>
